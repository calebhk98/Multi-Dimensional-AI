# Environment Configuration for Multi-Dimensional AI

# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================
MODEL_SIZE=1B  # Options: 1B, 7B
HIDDEN_DIM=1536  # 1B model: 1536, 7B model: 4096
NUM_LAYERS=24  # 1B model: 24, 7B model: 48
NUM_HEADS=16  # 1B model: 16, 7B model: 32
CONTEXT_LENGTH=4096

# ==============================================================================
# TRAINING CONFIGURATION
# ==============================================================================
BATCH_SIZE=16
LEARNING_RATE=3e-4
WEIGHT_DECAY=0.01
MAX_STEPS=1000000
WARMUP_STEPS=10000
GRADIENT_CLIP=1.0

# Training phases
TRAINING_PHASE=backprop  # Options: backprop, evolutionary
CHECKPOINT_INTERVAL=5000

# ==============================================================================
# DATA PATHS
# ==============================================================================
DATA_DIR=./data
SYNTHETIC_DATA_DIR=./data/synthetic
CHECKPOINT_DIR=./checkpoints
LOG_DIR=./logs

# ==============================================================================
# UNITY/VR INTEGRATION
# ==============================================================================
UNITY_EXECUTABLE=C:/Program Files/Unity/Hub/Editor/2022.3.0f1/Editor/Unity.exe
UNITY_PROJECT_PATH=./unity_environment
HEADLESS_MODE=true  # For evolutionary training
VR_WORLD_PORT=5555
OSC_PORT=9000  # For VRChat integration

# ==============================================================================
# EVOLUTIONARY TRAINING
# ==============================================================================
POPULATION_SIZE=100
NUM_GENERATIONS=200
SELECTION_RATE=0.2  # Top 20% survive
MUTATION_RATE=0.01
CROSSOVER_RATE=0.7
ELITISM_COUNT=5  # Keep top 5 unchanged

# Fitness weights
FITNESS_SOCIAL=0.25
FITNESS_NAVIGATION=0.20
FITNESS_TASK_COMPLETION=0.20
FITNESS_SURVIVAL=0.15
FITNESS_EFFICIENCY=0.10
FITNESS_NATURALNESS=0.05
FITNESS_NOVELTY=0.05

# ==============================================================================
# HARDWARE / DISTRIBUTED TRAINING
# ==============================================================================
DEVICE=cuda  # Options: cuda, cpu, mps
NUM_GPUS=1
DISTRIBUTED=false
MIXED_PRECISION=true  # Use FP16/BF16
QUANTIZATION=none  # Options: none, 8bit, 4bit

# ==============================================================================
# EXPERIMENT TRACKING
# ==============================================================================
WANDB_PROJECT=multi-dimensional-ai
WANDB_ENTITY=your_username
WANDB_API_KEY=your_wandb_key_here
LOG_LEVEL=INFO
